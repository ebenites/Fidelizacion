@section scripts {
    <script type="text/javascript">
        $(function () {



        });

        function getCuenta() {

            if ($('[name="afiliado"]').val() == '') {
                bootbox.alert("Debe indicar el número de documento de la cuenta titular.");
                return;
            }

            var afiliado = $('[name="afiliado"]').val();
            $.get('@Url.Content("~/TransaccionProductoCanje/GetCuenta")', { 'afiliado': afiliado, "_": $.now() }, function (data) {
                $('#afiliado-table').html(data);
                if ($('#afiliado-table .alert').length) {
                    bootbox.alert($('#afiliado-table .alert').html());
                }
            });
        }

        function verProductos() {
            $.get('@Url.Content("~/TransaccionProductoCanje/GetProductos")', { "_": $.now() }, function (data) {
                $('#productos-table').html(data);
                if ($('#productos-table .alert').length) {
                    bootbox.alert($('#productos-table .alert').html());
                }

                // Datatable
                $('#productos-table table.table').DataTable({
                    'pageLength': 5,
                    'bLengthChange': false,
                    'bFilter': false,
                    'bInfo': false,
                    'language': {
                        'paginate': {
                            'next': 'Siguiente',
                            'previous': 'Anterior'
                        }
                    }
                });

            });
        }

        function varModalidades(idproducto) {
            $.get('@Url.Content("~/TransaccionProductoCanje/GetModalidades")', { 'idproducto': idproducto, "_": $.now() }, function (data) {
                bootbox.dialog({
                    message: data,
                    title: "Ver Modalidad de Canje"
                });
            });
        }

        function cancelar() {
            bootbox.hideAll()
        }

        function aceptar() {
            // Validar 
            var cantidad = $('[name="cantidad"]').val();
            var modalidad = $('[name="modalidad"]').val();
            var maximo = $('[name="maximo"]').val();

            if (cantidad == '' || parseInt(cantidad) < 1) {
                bootbox.alert("Debe indicar una cantidad válida.");
                return;
            }

            if (parseInt(cantidad) > parseInt(maximo)) {  
                bootbox.alert("No se cuenta con stock disponible para la cantidad indicada.");
                return;
            }
            
            if ($('[name="modalidad"]:checked').length == 0) {
                bootbox.alert("Debe seleccionar una modalidad.");
                return;
            }

            // ...

        }

    </script>
}

<ol class="breadcrumb">
    <li><a href="#">Inicio</a></li>
    <li><a href="#">Administración de Puntos</a></li>
    <li class="active">Transacción de Producto Canje</li>
</ol>

<div class="page-header">
    <h2>Transacción de Producto Canje</h2>
    @{ViewBag.Title = "Transacción de Producto Canje";}
</div>

<form onsubmit="return false;">

    <!-- Afiliado -->

    <fieldset id="afiliado-form">
        <legend>Afiliado</legend>
        <div class="row form-group">
            <label for="afiliado" class="col-sm-2 form-control-label text-right">Cuenta Titular</label>
            <div class="col-sm-10 form-inline">
                <input type="text" id="afiliado" name="afiliado" class="form-control" style="width:300px" placeholder="Ingrese N° Documento" autocomplete="off" />
                <input type="button" value="Buscar Afiliado" class="btn btn-default" onclick="getCuenta()" />
            </div>
        </div>
    </fieldset>

    <div id="afiliado-table" class="table-responsive">

    </div>

    <hr />

    <!-- Producto Canje -->

    <div id="productos-table" class="table-responsive">

    </div>

    <!-- Canje de Producto -->

    <fieldset id="canje-form">
        <legend>Canje de Producto</legend>
        <div class="row form-group">
            <label class="col-sm-2 form-control-label text-right">Tienda</label>
            <div class="col-sm-2 form-inline">
                <input type="text" class="form-control" value="Plaza Vea Risso" readonly />
            </div>
            <label class="col-sm-2 form-control-label text-right">Afiliado</label>
            <div class="col-sm-2 form-inline">
                <input type="text" class="form-control" value="Talía Llanca Cotrina" readonly />
            </div>
            <label class="col-sm-2 form-control-label text-right">Fecha de Canje</label>
            <div class="col-sm-2 form-inline">
                <input type="text" class="form-control" value="10/05/2016" readonly />
            </div>
        </div>
    </fieldset>

    <div id="canje-table" class="table-responsive">

        <table class="table table-hover table-bordered">
            <colgroup>
                <col width="100" />
                <col />
                <col />
                <col />
                <col />
                <col />
                <col />
            </colgroup>
            <thead>
                <tr>
                    <th>Código</th>
                    <th>Nombre Producto</th>
                    <th>Cantidad</th>
                    <th>Puntos Unitario</th>
                    <th>Importe</th>
                    <th>Subtotal Puntos</th>
                    <th>Subtotal Importe</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>P0001</td>
                    <td>Billetera #10</td>
                    <td>2</td>
                    <td>10</td>
                    <td>S/. 5.00</td>
                    <td>20</td>
                    <td>S/. 10.00</td>
                </tr>
                <tr>
                    <td>P0003</td>
                    <td>Cartera #1</td>
                    <td>1</td>
                    <td>30</td>
                    <td>S/. 0.00</td>
                    <td>30</td>
                    <td>S/. 0.00</td>
                </tr>
            </tbody>
        </table>

    </div>

    <div class="row">
        <strong class="col-sm-2">Cantidad Productos</strong>
        <span class="col-sm-2">3</span>
        <strong class="col-sm-2">Total Puntos</strong>
        <span class="col-sm-2">50</span>
        <strong class="col-sm-2">Total Importe</strong>
        <span class="col-sm-2">S/. 10.00</span>
    </div>

    <hr />

    
    <div class="row form-group">
        <div class="col-sm-5 text-right">
            <input type="button" value="Grabar" class="btn btn-primary" style="width:100px" onclick="grabar()" />
        </div>
        <div class="col-sm-2 text-center">
        </div>
        <div class="col-sm-5 text-left">
            <a href="@Url.Content("~/Home/Cerrar")" class="btn btn-danger" style="width:100px">Salir</a>
        </div>
    </div>

</form>
